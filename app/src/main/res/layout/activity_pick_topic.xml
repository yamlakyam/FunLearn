<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".PickTopicActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/codingCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/artCard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/artCard"
        app:layout_constraintTop_toBottomOf="@+id/artCard">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/desktop" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pick your favorite topic"
        android:textColor="#282627"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Choose your favorite topic to help us deliver the most suitable course for you"
        android:textColor="#B8B1B0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/artCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/artist" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/businessCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/culinaryCard"
        app:layout_constraintStart_toEndOf="@+id/artCard"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/briefcase" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/culinaryCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="46dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/noodles" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sportCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/gamingCard"
        app:layout_constraintStart_toStartOf="@+id/gamingCard"
        app:layout_constraintTop_toBottomOf="@+id/gamingCard">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/football" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/musicCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/designCard"
        app:layout_constraintStart_toStartOf="@+id/designCard"
        app:layout_constraintTop_toBottomOf="@+id/designCard">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/musical" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/marketingCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/codingCard"
        app:layout_constraintStart_toStartOf="@+id/codingCard"
        app:layout_constraintTop_toBottomOf="@+id/codingCard">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/advertising" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/designCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/businessCard"
        app:layout_constraintStart_toStartOf="@+id/businessCard"
        app:layout_constraintTop_toBottomOf="@+id/businessCard">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/measuring" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gamingCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/culinaryCard"
        app:layout_constraintStart_toStartOf="@+id/culinaryCard"
        app:layout_constraintTop_toBottomOf="@+id/culinaryCard">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/gamepad" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:text="Start your journey"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="#00a9b6"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicCard">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="You can still change your course later"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Art"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/artCard"
        app:layout_constraintStart_toStartOf="@+id/artCard"
        app:layout_constraintTop_toBottomOf="@+id/artCard" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Business"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/businessCard"
        app:layout_constraintStart_toStartOf="@+id/businessCard"
        app:layout_constraintTop_toBottomOf="@+id/businessCard" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Culinary"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/culinaryCard"
        app:layout_constraintStart_toStartOf="@+id/culinaryCard"
        app:layout_constraintTop_toBottomOf="@+id/culinaryCard" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Coding"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/codingCard"
        app:layout_constraintStart_toStartOf="@+id/codingCard"
        app:layout_constraintTop_toBottomOf="@+id/codingCard" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Design"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/designCard"
        app:layout_constraintStart_toStartOf="@+id/designCard"
        app:layout_constraintTop_toBottomOf="@+id/designCard" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gaming"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/gamingCard"
        app:layout_constraintStart_toStartOf="@+id/gamingCard"
        app:layout_constraintTop_toBottomOf="@+id/gamingCard" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Marketing"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/marketingCard"
        app:layout_constraintStart_toStartOf="@+id/marketingCard"
        app:layout_constraintTop_toBottomOf="@+id/marketingCard" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Music"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/musicCard"
        app:layout_constraintStart_toStartOf="@+id/musicCard"
        app:layout_constraintTop_toBottomOf="@+id/musicCard" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sport"
        android:textColor="#B8B1B0"
        app:layout_constraintEnd_toEndOf="@+id/sportCard"
        app:layout_constraintStart_toStartOf="@+id/sportCard"
        app:layout_constraintTop_toBottomOf="@+id/sportCard" />


</androidx.constraintlayout.widget.ConstraintLayout>